<?xml version='1.0' encoding='utf-8'?>
<widget id="com.drivingtalking.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets">
  <name>DrivingTalking</name>
  <description>
    Driving Talking
  </description>
  <author email="wey0407@163.com"/>
  <content src="index.html"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="HideKeyboardFormAccessoryBar" value="true"/>
  <preference name="Orientation" value="portrait"/>
  <platform name="android">
    <name>DrivingTalking</name>
    <icon density="ldpi" src="resources/android/icon/ldpi.png"/>
    <icon density="mdpi" src="resources/android/icon/mdpi.png"/>
    <icon density="hdpi" src="resources/android/icon/hdpi.png"/>
    <icon density="xhdpi" src="resources/android/icon/xhdpi.png"/>
    <icon density="xxhdpi" src="resources/android/icon/xxhdpi.png"/>
    <icon density="xxxhdpi" src="resources/android/icon/xxxhdpi.png"/>
    <preference name="KeepRunning" value="false"/>
    <preference name="DefaultVolumeStream" value="call"/>
    <allow-intent href="market:*"/>
    <splash density="port-ldpi" src="resources/android/splash/splash-port-ldpi.png"/>
    <splash density="port-mdpi" src="resources/android/splash/splash-port-mdpi.png"/>
    <splash density="port-hdpi" src="resources/android/splash/splash-port-hdpi.png"/>
    <splash density="port-xhdpi" src="resources/android/splash/splash-port-xhdpi.png"/>
    <splash density="port-xxhdpi" src="resources/android/splash/splash-port-xxhdpi.png"/>
    <splash density="port-xxxhdpi" src="resources/android/splash/splash-port-xxxhdpi.png"/>
    <preference name="AndroidPersistentFileLocation" value="Internal"/>
    <preference name="AndroidPersistentFileLocation" value="Compatibility"/>
    <preference name="AndroidExtraFilesystems" value="files,files-external,documents,sdcard,cache,cache-external,assets,root"/>
    <config-file parent="/manifest" target="AndroidManifest.xml" xmlns:android="http://schemas.android.com/apk/res/android">
      <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES"/>
    </config-file>
    <preference name="android-build-tool" value="gradle"/>
  </platform>
  <plugin name="cordova-plugin-whitelist" spec="~1.3.4"/>
  <access origin="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <plugin name="cordova-plugin-device" spec="~2.0.3"/>
  <plugin name="cordova-plugin-splashscreen" spec="~5.0.3"/>
  <preference name="AutoHideSplashScreen" value="false"/>
  <preference name="SplashScreenDelay" value="15000"/>
  <preference name="SplashScreen" value="screen"/>
  <preference name="FadeSplashScreen" value="false"/>
  <preference name="ShowSplashScreenSpinner" value="false"/>
  <preference name="SplashMaintainAspectRatio" value="true"/>
  <preference name="SplashShowOnlyFirstTime" value="false"/>
  <preference name="ShowSplashScreen" value="true"/>
  <plugin name="cordova-plugin-statusbar" spec="~2.4.3"/>
  <plugin name="cordova-plugin-app-version" spec="~0.1.9"/>
  <plugin name="cordova-plugin-file" spec="~6.0.2"/>
  <plugin name="cordova-plugin-file-transfer" spec="~1.7.1"/>
  <plugin name="cordova-plugin-file-opener2" spec="~2.2.1">
    <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+"/>
  </plugin>
  <plugin name="cordova-plugin-geolocation" spec="~4.0.2"/>
  <plugin name="cordova-plugin-badge" spec="~0.8.8"/>
  <plugin name="phonegap-plugin-barcodescanner" spec="~8.1.0"/>
  <plugin name="cordova-hot-code-push-plugin" spec="~1.5.3"/>
  <chcp>
    <auto-download enabled="true"/>
    <auto-install enabled="true"/>
    <native-interface version="1"/>
    <config-file url="http://www.drivingtalking.com/app/www"/>
  </chcp>
  <plugin name="phonegap-plugin-mobile-accessibility" spec="~1.0.5"/>
  <plugin name="cordova-plugin-agora-audio" spec="cordova_plugins/cordova-plugin-agora-audio"/>
</widget>
